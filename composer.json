{
    "name": "react/mysql",
    "description": "Async, Promise-based MySQL database client for ReactPHP.",
    "keywords": ["mysql", "promise", "async", "reactphp"],
    "license": "MIT",
    "require": {
        "php": ">=5.4.0",
        "react/event-loop": "^1.0 || ^0.5 || ^0.4 || ^0.3",
        "react/socket": "^1.0 || ^0.8"
    },
    "require-dev": {
        "phpunit/dbunit": "1.4.*",
        "ext-pdo_mysql": "*"
    },
    "autoload": {
        "psr-4": {
            "React\\MySQL\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "React\\Tests\\MySQL\\": "tests"
        }
    }
}
