{
    "name": "react/mysql",
    "description": "Async, Promise-based MySQL database client for ReactPHP.",
    "keywords": ["mysql", "promise", "async", "reactphp"],
    "license": "MIT",
    "require": {
        "php": ">=5.4.0",
        "react/socket": "0.8.*",
        "react/dns": "0.4.*"
    },
    "require-dev": {
        "phpunit/dbunit": "1.4.*",
        "ext-pdo_mysql": "*"
    },
    "autoload": {
        "psr-4": {
            "React\\MySQL\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "React\\Tests\\MySQL\\": "tests"
        }
    }
}
